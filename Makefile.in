SHELL = /bin/sh

FC      = @FC@
FCFLAGS = @CPPFLAGS@ @FCFLAGS@ -Iinclude

CXX     = @CXX@
CXXFLAGS= @CPPFLAGS@ @CXXFLAGS@ -Iinclude

MAKE    = @MAKE@
AR      = @AR@
ARFLAGS = @ARFLAGS@

LIB = libspud.a
HEADERS = include/spud.h include/cspud.h include/spud_enums.h include/tinystr.h include/tinyxml.h
MODS = spud.mod

OBJS = tinystr.o tinyxml.o tinyxmlerror.o tinyxmlparser.o spud.o spud_interfaces.o fspud.o

VPATH = src/

.SUFFIXES: .f90 .F90 .c .cpp .o .a

.f90.o:
	$(FC) $(FCFLAGS) -c $<
.cpp.o:
	$(CXX) $(CXXFLAGS) -c $<

default: libspud.a build-diamond

libspud.a: $(OBJS)
	$(AR) $(ARFLAGS) $(LIB) $(OBJS)

build-diamond:
	cd diamond; python setup.py build; cd ..

test: unittest

unittest: libspud.a
	@cd src/tests; $(MAKE)
	
.PHONY:doc

doc: 
	@cd doc; $(MAKE) spud_manual.pdf

install: libspud.a
	@INSTALL@ -d $(DESTDIR)@prefix@/share/spud
	@INSTALL@ -d $(DESTDIR)@prefix@/lib
	@INSTALL@ -d $(DESTDIR)@prefix@/include
	@INSTALL@ -d $(DESTDIR)@prefix@/bin
	@INSTALL@ $(LIB) $(DESTDIR)@prefix@/lib
	@INSTALL@ $(MODS) $(DESTDIR)@prefix@/include
	@INSTALL@ $(HEADERS) $(DESTDIR)@prefix@/include
	@INSTALL@ -m755 bin/spud-preprocess $(DESTDIR)@prefix@/bin
	@INSTALL@ -m644 schema/spud_base.rnc $(DESTDIR)@prefix@/share/spud
	@INSTALL@ -m644 schema/spud_base.rng $(DESTDIR)@prefix@/share/spud
	cd diamond;	python setup.py install --prefix=$(DESTDIR)@prefix@; cd ..

clean:
	@cd doc; $(MAKE) clean
	rm -f *.o libspud.a $(MODS) $(OBJS)
	@cd src/tests; $(MAKE) clean

distclean: clean
	rm -fr config.log config.status autom4te.cache Makefile include/confdefs.h
	rm -f bin/spud-preprocess diamond/diamond/preprocess.py
	@cd src/tests; $(MAKE) distclean
