SHELL = /bin/sh

FC      = @FC@
FCFLAGS = @CPPFLAGS@ @FCFLAGS@ -Iinclude

CXX     = @CXX@
CXXFLAGS= @CPPFLAGS@ @CXXFLAGS@ -Iinclude

MAKE    = @MAKE@
AR  = @AR@
ARFLAGS = @ARFLAGS@

LIB = libspud.a
HEADERS=include/spud.h include/cspud.h include/spud_enums.h

VPATH = src/

OBJS = fspud.o spud.o spud_interfaces.o tinystr.o tinyxmlerror.o tinyxml.o tinyxmlparser.o

.SUFFIXES: .f .f90 .F90 .F .c .cpp .o .a

.f90.o:
	$(FC) $(FCFLAGS) -c $<
.cpp.o:
	$(CXX) $(CXXFLAGS) -c $<

default: $(OBJS)
	$(AR) $(ARFLAGS) $(LIB) $(OBJS)

.PHONY:doc

doc: 
	@cd doc; $(MAKE) spud_manual.pdf

install: libspud.a
	@INSTALL@ -d $(DESTDIR)@prefix@/share/spud
	@INSTALL@ $(LIB) $(DESTDIR)@prefix@/lib
	@INSTALL@ spud.mod $(DESTDIR)@prefix@/include
	@INSTALL@ $(HEADERS) $(DESTDIR)@prefix@/include
	@INSTALL@ -m644 schema/spud_base.rnc $(DESTDIR)@prefix@/share/spud
	@INSTALL@ -m644 schema/spud_base.rng $(DESTDIR)@prefix@/share/spud

clean:
	@cd doc; $(MAKE) clean
	rm -f *.o libspud.a spud.mod

distclean:
	@MAKE@ clean
	rm -rf config.log config.status autom4te.cache Makefile

